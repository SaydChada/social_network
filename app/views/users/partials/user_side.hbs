<div class="panel-body">
    <div class="media">
        <div>
            {{#xif user.username '===' userData.username }}
                <div class="clearfix">
                    <a href="/users/edit" type="button" class="col-xs-12 btn btn-danger">
                        <i class="fa fa-edit">&nbsp;</i> Edtier</a>
                </div>
                <hr>
            {{/xif}}

            <img alt="avatar-{{ userData.username }}" class="center-block thumbnail img-responsive"
                 src="{{userData.avatar}}" width="150px" height="150px">
            {{#xif user.username '!==' userData.username }}
                <div class="clearfix">
                    <button
                            type="button" id="add_friend" {{#if statusRequest }}disabled{{/if}}
                            data-user-id="{{ userData._id }}"
                            class="col-xs-12 btn {{ statusClass }}"
                    >
                        <i class="fa fa-address-card-o">&nbsp;</i> {{ statusText }}</button>
                </div>
            {{/xif}}

            <hr>
            <div class="text-center">
                <p><strong>Pseudo : </strong> {{ userData.username }}</p>
                <p><strong>Nom : </strong> {{ userData.firstName }}</p>
                <p><strong>Prénom : </strong> {{ userData.lastName }}</p>
                <p><strong>Né(e) le : </strong>
                    <br>
                    {{ dateFormat userData.birthdate  'DD MMMM YYYY'}} ({{ dateToYears userData.birthdate }} ans)
                </p>
                <p><strong>Incrit(e) le : </strong> <br>{{ dateFormat userData.created  'DD MMMM YYYY'}}</p>

                <p><strong>Genre : </strong>
                    {{#xif userData.gender '===' 'male'}}
                        <span title="homme" class="label label-info"><i class="fa fa-mars"></i></span>
                    {{else}}
                        <span title="femme" class="label label-danger"><i class="fa fa-venus"></i></span>
                    {{/xif}}
                </p>
            </div>
        </div>
        <div>
            <hr>
            <h3><strong>Bio</strong></h3>
            <div class="text-break">{{{ userData.description }}} </div>
            {{#xif user.username '!==' userData.username }}
                <hr>
                <div>
                    <h3><strong>Recommender un ami</strong></h3>
                    <div class="input-group ms-block">
                        <input type="text" class="form-control" placeholder="My friends...">
                        <span class="input-group-btn">
                        <button id="submit_recommended_friend" class="btn btn-success" type="button">Ok</button>
                    </span>
                    </div>
                </div>
            {{/xif}}

        </div>
    </div>
</div>