<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title text-center">{{ formTitle }}</div>
            </div>
            <div class="panel-body">
                <form role="form" method="post" action="{{ url }}" id="register_user_form" class="form-horizontal">
                    <div class="input-group center-element">
                        <input placeholder="avatar" type="hidden" class="js-tapatar" name="avatar">
                    </div>
                    <hr>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input type="email" name="email" required placeholder="email" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        <input type="text" name="birthdate" required id="birthdate" placeholder="birthdate" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" name="username" required placeholder="username" autofocus="" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                        <input type="text" name="firstname" required placeholder="firstName" autofocus="" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                        <input type="text" name="lastname" required placeholder="lastName" autofocus="" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" name="password" required placeholder="password" class="form-control"/>
                    </div>
                    <br>
                    <div class="input-group ms-block">
                        <span class="input-group-addon"><i class="fa fa-transgender"></i></span>
                        <input type="text" name="gender" required id="gender" placeholder="gender" autofocus="" class="form-control"/>
                    </div>
                    <br>
                    <div>
                        <div class="loading"></div>
                        <label for="description" id="label_description" class="hidden">Description</label>
                        <textarea
                                name="description" id="description" maxlength="100" minlength="10" required class="hidden tmce">
                        </textarea>
                    </div>
                    <hr>
                    <div class="input-group pull-right">
                            <button id="register_btn" type="submit" class="btn btn-success disabled" >Inscription</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

